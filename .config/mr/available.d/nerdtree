[.vim/bundle/nerdtree]
checkout = git clone 'git@github.com:scrooloose/nerdtree.git' ~/.vim/bundle/nerdtree
update   = mkdir -p ~/.vim/autoload
           curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim
# bash 'true' makes push not fail since we don't commit here
push     = true
